{
  "schemaVersion": 1,
  "id": "randore",
  "version": "${version}",

  "name": "Rand'Ore",
  "description": "Random ore block that drops ALL (vanilla) kinds of ore!",
  "authors": [
    "Peakstep"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/randore",
    "sources": "https://github.com/Peakstep233/Randore"
  },

  "license": "MIT License",
  "icon": "assets/randore/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "dev.intelligentcreations.randore.RandoreMod"
      }
    ]
  },
  "custom": {
    "paradoxconfig": {
      "package": "dev.intelligentcreations.randore",
      "configs": [ "RandoreConfig" ]
    }
  },
  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "1.18.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
